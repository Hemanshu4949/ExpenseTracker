<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/expenseFragment">

    <!-- Expense Fragment -->
    <fragment
        android:id="@+id/expenseFragment"
        android:name="com.example.expensetracker.expense.expense"
        android:label="Expense"
        tools:layout="@layout/fragment_expense" >
        <action
            android:id="@+id/action_expenseFragment_to_add_expense_Fragment"
            app:destination="@id/add_expense_Fragment" />
    </fragment>

    <!-- Summary Fragment -->
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.example.expensetracker.Summery.summery"
        android:label="Summary"
        tools:layout="@layout/fragment_summery" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.expensetracker.Setting.setting"
        android:label="Settings"
        tools:layout="@layout/fragment_setting" />

    <!-- Add Expense Fragment -->
    <fragment
        android:id="@+id/add_expense_Fragment"
        android:name="com.example.expensetracker.expense.add_expense"
        android:label="add expense"
        tools:layout="@layout/fragment_add_expense" />

</navigation>
