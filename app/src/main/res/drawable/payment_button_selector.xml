<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/add_expense_field_background" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/add_expense_accent_blue" />
        </shape>
    </item>
    <!-- Default, unselected state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/add_expense_button_unselected_background" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
