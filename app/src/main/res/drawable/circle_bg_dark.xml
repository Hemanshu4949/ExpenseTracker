<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Dark circle background -->
    <solid android:color="#1C1C1E" />

    <!-- Soft border for contrast -->
    <stroke
        android:width="1dp"
        android:color="#2A2A2C" />

    <!-- Slight padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Smooth elevation feel -->
    <size
        android:width="48dp"
        android:height="48dp" />

</shape>
