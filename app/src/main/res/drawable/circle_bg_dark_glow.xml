<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1C1C1E" />
            <size android:width="40dp" android:height="40dp" />
            <stroke android:width="3dp" android:color="#2A2A2C" />
            <padding android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#5AE7C8" />
            <size android:width="48dp" android:height="48dp" />
            <corners android:radius="50dp" />
            <alpha android:alpha="0.20" />
        </shape>
    </item>
</layer-list>
