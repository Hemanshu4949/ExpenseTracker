<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#1A1A1A"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp">

        <!-- Category Icon -->
        <FrameLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/circle_bg_dark"
            android:layout_marginEnd="14dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_paid"
                app:tint="#5AE7C8"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:contentDescription="Category Icon"/>
        </FrameLayout>

        <!-- Transaction Title and Subtitle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groceries"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:id="@+id/tv_transaction_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food and Drinks"
                android:textColor="#A0A0A0"
                android:textSize="13sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Amount and Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-â‚¹450.00"
                android:textColor="#FF5A5F"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="end"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 16"
                android:textColor="#8E8E8E"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:gravity="end"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
